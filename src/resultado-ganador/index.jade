extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
  main.registro-cupon
    .registro-cupon__triangles
    .container
      .row
        .col-xs-24.col-md-12.col-md-offset-6
          section.registro-cupon__hero
            .registro-cupon__hero__wrapper
              img.registro-cupon__hero__banner(src="/images/title-banner-winner.png")
              .registro-cupon__hero__cta
                p.registro-cupon__hero__cta-text.registro-cupon__hero__cta-text--big Felicitaciones, te ganaste 1 Gorra TOTAL
                .registro-cupon__hero__image
                  img(src="/images/gorra.png")
                p.registro-cupon__hero__cta-text.registro-cupon__hero__cta-text--separation Podés solicitar tu premio comunicándote al 0810-888-2489 con tu número de cliente.
                p.registro-cupon__hero__cta-text.registro-cupon__hero__cta-text--big
                  span ¿Tenés mas cupones?
                  br
                  | Seguí probando tu suerte
                button.registro-cupon__hero__cta-button ingresar otro cupón
              img.registro-cupon__hero__city-logo(src="/images/citygas.png")
